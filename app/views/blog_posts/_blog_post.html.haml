.col-md-10.col-md-push-1
  .post{'data-post-id': blog_post['ID'], id: "post_#{blog_post['ID']}"}
    %h2.blog-title=blog_post['title']
    .body
      =blog_post['content'].html_safe
    .footer
      =link_to "Original Post", blog_post['short_URL'], target: '_blank'
      %p
        ="Published on #{format_time(blog_post['date'])}"

      .share_buttons



